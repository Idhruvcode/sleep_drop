OPENAI_API_KEY=your-openai-key
OPENAI_BASE_URL=https://api.openai.com/v1
CHAT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# MongoDB Atlas Vector Search configuration
# Provide a URI directly…
MONGODB_URI=mongodb+srv://user:password@cluster.example.mongodb.net

# …or let the app build one from the individual components below.
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_CLUSTER_URL=cluster.example.mongodb.net

# Required in both cases
MONGODB_DBNAME=sleepdrop
MONGODB_COLLECTION=document
MONGODB_VECTOR_INDEX=vector_index
MONGODB_EMBEDDING_FIELD=embedding
